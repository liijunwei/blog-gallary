#!/bin/bash

git add . && git commit -m "Commit manually." && git push

hexo clean  &&
hexo deploy &&
ssh webuser@xiaoli "cd /srv/www/blog-gallary &&
                    git fetch         &&
                    git checkout main &&
                    git pull"

open_tag=$1
[[ $open_tag != "" ]] && open http://blog.bxzy.top

echo
echo "open $BLOG_DOMAIN" | tee /dev/tty | pbcopy
